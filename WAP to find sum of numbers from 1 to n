import java.util.Scanner;
class Main{
    public static void main(String args[]){
        int num;
        int sum = 0;
        Scanner sc = new Scanner(System.in);
        
        System.out.print("Enter the nth number: ");
        num = sc.nextInt();
        
        for(int i=1; i<=num; i++){
            
            sum = sum + i;
        }
        System.out.print("The Sum from 1 to "+num+" is "+sum);
        
        
    }
}
